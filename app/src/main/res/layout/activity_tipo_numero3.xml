<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tipo_numero3">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipos de Ejercicios"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="93dp" />

    <RadioButton
        android:id="@+id/radioButton9"
        android:layout_width="262dp"
        android:layout_height="80dp"
        android:text="Ejercicio cardiovascular en casa (saltar la cuerda, burpees, jumping jacks) Duración: 30-45 minutos Frecuencia: 4-5 días a la semana"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="126dp" />

    <RadioButton
        android:id="@+id/radioButton10"
        android:layout_width="270dp"
        android:layout_height="71dp"
        android:text="Sentadillas (squats) con peso corporal o con una silla como apoyo Series: 3-4 series Repeticiones: 12-15 repeticiones por serie"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="230dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endomorfo"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="34dp" />

    <RadioButton
        android:id="@+id/radioButton11"
        android:layout_width="286dp"
        android:layout_height="67dp"
        android:text="Mountain climbers (escaladores) Series: 3-4 series Repeticiones: 15-20 repeticiones por serie"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="386dp" />

    <RadioButton
        android:id="@+id/radioButton12"
        android:layout_width="268dp"
        android:layout_height="63dp"
        android:text="Plancha (plank)Series: 3-4 series Duración: Mantén la posición durante 45-60 segundos por serie"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="313dp" />

</androidx.constraintlayout.widget.ConstraintLayout>